<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto"> <!-- Added mx-auto class for centering -->
      <h2 class="text-white bangers-regular text-center">Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "text-white" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3 d-flex justify-content-center align-items-center"> <!-- Added flexbox classes for centering -->
          <div class="text-center"> <!-- Center the content inside a div -->
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control smaller-text-field text-center" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3 d-flex justify-content-center align-items-center"> <!-- Added flexbox classes for centering -->
          <div class="text-center"> <!-- Center the content inside a div -->
            <%= f.label :password, class: "form-label" %>
            <% if @minimum_password_length %>
              <br />
              <em class="form-text text-white">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control smaller-text-field text-center" %>
            <br>
            <em class="form-text text-white">(leave blank if you don't want to change it)</em>
            <br>
          </div>
        </div>

        <div class="mb-3 d-flex justify-content-center align-items-center"> <!-- Added flexbox classes for centering -->
          <div class="text-center"> <!-- Center the content inside a div -->
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control smaller-text-field text-center" %>
          </div>
        </div>

        <div class="mb-3 d-flex justify-content-center align-items-center"> <!-- Added flexbox classes for centering -->
          <div class="text-center"> <!-- Center the content inside a div -->
            <%= f.label :current_password, class: "form-label" %>
            <br>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control smaller-text-field text-center" %>
          </div>
        </div>

        <div class="text-center mt-4">
          <%= f.submit "Update", class: "btn btn-primary btn-lg bangers-regular bg-black border-0 btn-custom" %>
        </div>
      <% end %>

      <div class="text-center mt-2">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-white" %>
      </div>
    </div>
  </div>
</div>