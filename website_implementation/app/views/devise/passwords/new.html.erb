<div class="container mt-5">
  <h2 class="text-white bangers-regular text-center">Forgot your password?</h2>
  <div class="row">
    <div class="col-md-8 mx-auto">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "text-white", method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3 d-flex justify-content-center align-items-center">
          <div class="text-center">
            <%= f.label :email, class: "form-label text-white" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control smaller-text-field text-center" %>
          </div>
        </div>

        <div class="actions text-center mt-4">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg bangers-regular bg-black border-0 btn-custom" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center mt-2">
    <%= render "devise/shared/links" %>
  </div>
</div>