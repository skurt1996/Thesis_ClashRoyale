<div class="card-container">
  <div class="card">
    <div class="card-content">
      <h2><%= t('mission') %></h2>
      <p class="mt-3"><%= t('mission_text') %></p>
    </div>
  </div>
  <div class="card">
    <div class="card-content">
      <h2><%= t('your_contribution') %></h2>
      <p class="mt-3"><%= t('contribution_text') %></p>
      <% if user_signed_in? %>
        <%= link_to t('bet_on_battles'), battles_path, class: "read-more" %>
      <% else %>
        <%= link_to t('sign_in'), new_user_session_path, class: "read-more" %>
      <% end %>
    </div>
  </div>
</div>